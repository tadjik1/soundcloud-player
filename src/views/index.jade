      a(href='http://browsehappy.com/') upgrade your browser
      | to improve your experience.
    <!--<![endif]-->
    #app
      if env === 'nodejs'
        <%= body %>

    script(src='/assets/js/client.js')

    if env === 'nodejs'
      script.
        (function (window) {
          // FLUX
          try {
            window.flux = <%= flux %>;
          } catch (ignore) {}
        })(this);
