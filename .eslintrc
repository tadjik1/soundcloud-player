{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    // Strict mode
    "strict": [2, "never"],

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],
    "curly": [2, "multi-line"],
    "no-underscore-dangle": 0,

    // https://github.com/yannickcr/eslint-plugin-react
    "react/jsx-uses-react": 1
  }
}
